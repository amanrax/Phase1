# ============================================
# CEM Production Environment Variables
# ============================================
# This file is for reference only - actual values are in AWS Secrets Manager

# MongoDB Atlas (From Secrets Manager)
MONGODB_URL=<from cem/mongo-uri>
MONGODB_DB_NAME=<from cem/mongo-db-name>

# JWT & Security (From Secrets Manager)
JWT_SECRET=<from cem/jwt-secret>
SECRET_KEY=<from cem/secret-key>
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis - ElastiCache (From Secrets Manager)
REDIS_URL=<from cem/redis-url>

# Admin Credentials (From Secrets Manager)
SEED_ADMIN_EMAIL=<from cem/admin-email>
SEED_ADMIN_PASSWORD=<from cem/admin-password>

# Application Settings
ENVIRONMENT=production
DEBUG=False
UPLOAD_DIR=/app/uploads  # Not used with GridFS
MAX_UPLOAD_SIZE_MB=10

# CORS Origins (Update with your production frontend URL)
CORS_ORIGINS=["https://your-frontend-domain.com", "https://api.your-domain.com"]
CORS_ALLOW_CREDENTIALS=True
