# AWS DocumentDB Connection String
# Format: mongodb+srv://admin:PASSWORD@cluster.xxxxx.docdb.amazonaws.com:27017/ziamis?tls=true&retryWrites=false
MONGODB_URL=mongodb+srv://admin:YourPasswordHere@ziamis-cluster.xxxxx.docdb.amazonaws.com:27017/ziamis?tls=true&retryWrites=false

# AWS ElastiCache Redis Connection String
# Format: redis://:PASSWORD@endpoint.cache.amazonaws.com:6379/0
REDIS_URL=redis://:YourRedisPassword@ziamis-redis.xxxxx.ng.0001.use1.cache.amazonaws.com:6379/0

# Secret key for JWT tokens (min 32 characters)
SECRET_KEY=your-long-random-secret-key-at-least-32-chars-here

# Environment: development, staging, production
ENVIRONMENT=production

# CORS allowed origins (comma-separated)
# Include: mobile app, web app, testing domains
CORS_ORIGINS=https://api.yourdomain.com,https://app.yourdomain.com,capacitor://localhost,http://localhost

# Token expiry times (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_MINUTES=43200

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your-iam-access-key
AWS_SECRET_ACCESS_KEY=your-iam-secret-key
AWS_STORAGE_BUCKET_NAME=ziamis-uploads
AWS_REGION=us-east-1

# Celery configuration
CELERY_BROKER_URL=redis://:password@endpoint:6379/0
CELERY_RESULT_BACKEND=redis://:password@endpoint:6379/0
