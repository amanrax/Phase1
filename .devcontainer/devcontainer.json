{
  "name": "ZIAMIS Farmer System",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "forwardPorts": [5173, 8000, 27017, 6379],
  "portsAttributes": {
    "5173": {
      "label": "Frontend",
      "onAutoForward": "notify",
      "visibility": "public"
    },
    "8000": {
      "label": "Backend API",
      "onAutoForward": "notify",
      "visibility": "public"
    },
    "27017": {
      "label": "MongoDB",
      "onAutoForward": "ignore"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "ignore"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "docker compose version && echo 'âœ… Codespace ready with Docker support!'"
}
